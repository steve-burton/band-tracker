<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Band Tracker</title>
	</head>
	<body>
    <div class="container">
			<div class="row">
				<div class="col-md-12">
					@if(@Model.Count == 0)
					{
					  <h2>You need to add a band first</h2>
					}
					else
					{
          <h3>Add a band for this venue: </h3>
					<h2>@Model.GetVenueName()</h2>
					<form class="add-band" action="/venue/venue-add-band" method="post">
						<div class="form-group">
							<select name="venue-band">
						    @foreach (var band in Model)
						    {
						      <option value="@band.GetId()">@band.GetBandName()</option>
						    }
						  </select>
						</div>
	          <button class="btn" type="submit" name="button">Enter</button>
	        </form>
					}
					<div>
						<h4><a href="/">Return home</a></h4>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
