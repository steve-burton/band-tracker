<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
		<link rel="stylesheet" type="text/css" href="/Content/css/styles.css">
		<title>Band Tracker</title>
	</head>
	<body>
    <div class="container">
			<div class="row">
				<div class="col-md-12">
				  @if(@Model.Count == 0)
					{
					  <h2>You need to add a venue first</h2>
					}
					else
					{ 
          <h3>Add a venue for this band:</h3>
          <h2>@Model["band"].GetBandName()</h2>
					<form class="add-venue" action="/band/band-add-venue/@Model["band"].GetId()" method="post">
						<div class="form-group">
            <input type="hidden" class="form-control" name="_method" value="PATCH">
            <input type="hidden" class="form-control" name="band-id" value="@Model["band"].GetId()">
							<select name="band-venue">
						    @foreach (var venue in Model["venue"])
						    {
						      <option value="@venue.GetId()">@venue.GetVenueName()</option>
						    }
						  </select>
						</div>
	          <button class="btn" type="submit" name="button">Enter</button>
	        </form>
          }
					<div>
						<h4><a href="/">Return home</a></h4>
					</div>
				</div>
			</div>
		</div>
	</body>
</html>
